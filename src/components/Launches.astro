---
import CardLaunch from '../components/CardLaunch.astro'
import { getLastestLaunches } from '../services/spacex'

const launches = await getLastestLaunches()
---

<div class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3'>
 {
  launches.map(({ id, links, details, flight_number, success }) => (
   <CardLaunch
    {...{
     id,
     img: links.patch.small,
     details,
     fligthNumber: flight_number,
     success
    }}
   />
  ))
 }
</div>
